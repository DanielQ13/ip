<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="galath.gui.MainWindow"
            styleClass="root" stylesheets="@../css/style.css">
    <children>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" hbarPolicy="NEVER"
                    prefHeight="550.0" prefWidth="400.0" AnchorPane.bottomAnchor="55.0"
                    AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                    AnchorPane.topAnchor="0.0" styleClass="scroll-pane">
            <content>
                <VBox fx:id="dialogContainer" prefWidth="388.0" spacing="10.0"
                      styleClass="dialog-container" />
            </content>
        </ScrollPane>

        <TextField fx:id="userInput" layoutY="558.0" prefHeight="41.0" prefWidth="324.0"
                   promptText="Type your command here..."
                   AnchorPane.bottomAnchor="1.0" AnchorPane.leftAnchor="10.0"
                   AnchorPane.rightAnchor="70.0" styleClass="input-field" />

        <Button fx:id="sendButton" layoutX="324.0" layoutY="558.0" mnemonicParsing="false"
                onAction="#handleUserInput" prefHeight="41.0" prefWidth="56.0"
                text="Send" AnchorPane.bottomAnchor="1.0" AnchorPane.rightAnchor="10.0"
                styleClass="send-button" />
    </children>
</AnchorPane>